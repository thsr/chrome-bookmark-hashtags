{
  "name": "Hashtags for Chrome bookmarks",
  "description": "Manage your Chrome bookmarks by adding #hashtags!",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/new.png",
    "128": "icons/new.png"
  },
  "browser_action": {
    "default_title": "Hashtags for Chrome bookmarks"
  },
  "background": {
    "scripts": ["background.js"],
     "persistent": false
  },
  "permissions": [
    "bookmarks",
    "chrome://favicon/"
  ],
  "options_ui": {
    "page": "options/options.html"
  }
}
